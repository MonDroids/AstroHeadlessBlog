---
import { fetchPosts } from '../../lib/fetchPosts';
import type { WPPost } from '../../types/wp';
const posts: WPPost[] = await fetchPosts();
---

<main class="max-w-4xl mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-6">Сүүлийн нийтлэлүүд</h1>
  <ul class="grid gap-6 md:grid-cols-2">
    {posts.map(post => (
      <li class="border rounded-lg p-4 hover:shadow-md transition">
        <a href={`/blog/${post.slug}`} class="text-xl font-medium hover:underline">
          {post.title.rendered}
        </a>
        <p class="text-gray-500 mt-2" innerHTML={post.excerpt.rendered}></p>
      </li>
    ))}
  </ul>
</main>
