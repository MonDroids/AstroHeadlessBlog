---
import { GraphQLClient, gql } from 'graphql-request';

const endpoint = 'https://www.centuryhousegardens.com/graphql';
const client = new GraphQLClient(endpoint);

const query = gql`
  {
    posts {
      nodes {
        slug
        title
        date
        excerpt
      }
    }
  }
`;

const { posts } = await client.request(query);
---

<main class="max-w-4xl mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-6">Сүүлийн нийтлэлүүд</h1>
  <ul class="grid gap-6 md:grid-cols-2">
    {posts.nodes.map(post => (
      <li class="border rounded-lg p-4 hover:shadow-md transition">
        <a href={`/blog/${post.slug}`} class="text-xl font-medium hover:underline">
          {post.title}
        </a>
        <p class="text-gray-500 mt-2" innerHTML={post.excerpt}></p>
      </li>
    ))}
  </ul>
</main>
