    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<Header />
	</head>
	<body class="bg-green-50 text-gray-800 font-Atkinson">
		<!-- Hero -->
		<section class="text-center py-16 px-4 bg-green-100">
			<h1 class="text-4xl md:text-5xl font-bold mb-4">Grow Your Own Medicine</h1>
				<img src="/heroImage.webp" alt="Medicinal Garden Kit" class="mx-auto mb-6 rounded-lg shadow-lg" width="600" height="400" fetchpriority="high">
			<p class="text-lg md:text-xl mb-6 max-w-2xl mx-auto">The Medicinal Garden Kit includes 10 powerful herbs you can grow in your backyard to naturally support your family's health.</p>
			<a href="https://medicinalseedkit.com/kit/#aff=flash-deal" class="bg-green-700 hover:bg-green-800 text-white font-bold py-3 px-6 rounded-xl transition">Order Now</a>
		  </section>
		<main>
			
		   <!-- Product Info -->
